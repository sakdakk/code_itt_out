#include <bits/stdc++.h>

using namespace std;
typedef long long ll;
int main()
{
   string s;
   cin>>s;
   ll k=0,ans=0;
   //cout<<s.size()-5;
   if(s.size()<5)
   {
       cout<<0<<"\n";
       return 0;
   }
   for(ll i=0;i<=s.size()-5;i++)
   {
       if(s[i]=='h' && s[i+1]=='e'&& s[i+2]=='a'&& s[i+3]=='v'&& s[i+4]=='y')
       k++;
       else
       if(s[i]=='m' && s[i+1]=='e'&& s[i+2]=='t'&& s[i+3]=='a'&& s[i+4]=='l')
       ans+=k;
       //cout<<ans<<"**";}
   }
   cout<<ans<<"\n";
   return 0;
}
